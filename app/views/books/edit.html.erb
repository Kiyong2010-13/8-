<h1>Editing Book</h1>

<div class="error">
    <% if @book.errors.any? %>
      <%= @book.errors.count %>error prohibited this book from being saved:
      <% @book.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
  </div>  
  
<%= form_with model:@book, url:book_path(@book), method: :patch, local:true do |f| %>

    <div class="field">
      <label>Title</label>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <label>Body</label>
      <%= f.text_area :body %>
    </div>
    
    <div class="actions">
      <%= f.submit 'update Book' %>
    </div>
    
<% end %>
<a><%= link_to 'show', book_path(@book), class: "Editlink" %></a>
