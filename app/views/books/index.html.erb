<p id="notice"></p>
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'Show', book_path(book.id), class: "Editlink" %></td>
        <td><%= link_to 'Edit', edit_book_path(book.id), class: "Editlink" %></td>
        <td><%= link_to 'Destroy', book_path(book.id), method: :delete, data: {confirm: "Are you sure? "}, class: "Editlink" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>

  <div class="error">
    <% if @book.errors.any? %>
      <%= @book.errors.count %>error prohibited this book from being saved:
      <% @book.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
  </div>  

<%= form_with model:@book, url:'/books',local:true do |f| %>

  <div class="field">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>
  
  <div class="field">
    <label>Body</label>
    <%= f.text_area :body %>
  </div>
  <%= f.submit 'Create Book' %>
  
<% end %>